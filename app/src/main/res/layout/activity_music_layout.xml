<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CEEBEF"
    tools:context=".MusicActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/musicB9"
                android:layout_width="135dp"
                android:layout_height="180dp"
                android:background="#00E0F9FF"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_quarter_note_double" />

            <ImageButton
                android:id="@+id/musicB2"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_marginRight="10dp"
                android:background="#00E0F9FF"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_half_note"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/musicB7"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:background="#00E0F9FF"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_quarter_note" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/musicB6"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:background="#00E0F9FF"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_dotted_quarter_note" />

            <ImageButton
                android:id="@+id/musicB5"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:background="#00E0F9FF"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_treble_clef" />

            <ImageButton
                android:id="@+id/musicB4"
                android:layout_width="115dp"
                android:layout_height="180dp"
                android:background="#00E0F9FF"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_eigth_drive" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/musicB1"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:background="#00E0F9FF"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_eigth_note_double" />

            <ImageButton
                android:id="@+id/musicB3"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:background="#00E0F9FF"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_single_sixteenth_note" />

            <ImageButton
                android:id="@+id/musicB8"
                android:layout_width="115dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:background="#00E0F9FF"
                android:padding="20dp"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_dotted_half_note" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="291dp"
        android:layout_height="178dp"
        android:layout_marginBottom="4dp"
        android:foregroundGravity="center_horizontal"
        android:src="@drawable/ic_musicchilling"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>